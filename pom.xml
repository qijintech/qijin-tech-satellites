	<groupId>tech.qijin.satellites</groupId>
	<artifactId>satellites-build</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<modules>
		<module>satellites-comments</module>
		<module>satellites-favorites</module>
		<module>satellites-user</module>
		<module>satellites-order</module>
		<module>satellites-item</module>
