			</dependency>
			<dependency>
				<groupId>tech.qijin.satellites</groupId>
				<artifactId>satellites-user</artifactId>
				<version>${project.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>tech.qijin.util4j</groupId>
			<artifactId>util4j-lang</artifactId>
		</dependency>
		<dependency>
			<groupId>tech.qijin.util4j</groupId>
			<artifactId>util4j-trace</artifactId>
		</dependency>
		<dependency>
			<groupId>tech.qijin.util4j</groupId>
			<artifactId>util4j-utils</artifactId>
		</dependency>
		<dependency>
			<groupId>tech.qijin.util4j</groupId>
			<artifactId>util4j-web</artifactId>
		</dependency>
		<dependency>
			<groupId>tech.qijin.util4j</groupId>
			<artifactId>util4j-mybatis</artifactId>
		</dependency>
		<dependency>
			<groupId>tech.qijin.util4j</groupId>
			<artifactId>util4j-aop</artifactId>
		</dependency>
		<dependency>
			<groupId>tech.qijin.util4j</groupId>
			<artifactId>util4j-redis</artifactId>
		</dependency>
	</dependencies>

	<distributionManagement>
	</distributionManagement>

	<profiles>
		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<spring.profiles.active>dev</spring.profiles.active>
			</properties>
		</profile>
		<profile>
			<id>test</id>
			<properties>
				<spring.profiles.active>test</spring.profiles.active>
			</properties>
		</profile>
		<profile>
			<id>staging</id>
			<properties>
				<spring.profiles.active>staging</spring.profiles.active>
			</properties>
		</profile>
		<profile>
			<id>prod</id>
			<properties>
				<spring.profiles.active>prod</spring.profiles.active>
			</properties>
		</profile>
		<profile>
			<id>snapshot</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<util4j.version>${util4j.project.version}-SNAPSHOT</util4j.version>
			</properties>
		</profile>
		<profile>
			<id>release</id>
			<properties>
				<util4j.version>${util4j.project.version}</util4j.version>
			</properties>
		</profile>
	</profiles>

	<build>
		<plugins>
