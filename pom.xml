	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>util4j-parent</artifactId>
		<groupId>tech.qijin.util4j</groupId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath/>
