	<properties>
		<util4j.project.version>1.0.0</util4j.project.version>
		<usercenter.client.version>1.0.0-SNAPSHOT</usercenter.client.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>tech.qijin.util4j</groupId>
				<artifactId>util4j-dependencies</artifactId>
				<version>${util4j.version}</version>
				<scope>import</scope>
				<type>pom</type>
			</dependency>
			<dependency>
				<groupId>tech.qijin.satellites</groupId>
				<artifactId>satellites-item</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>tech.qijin.satellites</groupId>
				<artifactId>satellites-comments</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>tech.qijin.satellites</groupId>
				<artifactId>satellites-favorites</artifactId>
